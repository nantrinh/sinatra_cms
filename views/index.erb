<p><a href="/new">New Document</a></p>
<ul>
  <% @filenames.each do |filename| %>
    <li>
      <a href="<%=filename%>"><%=filename%></a>
      <a href="<%=filename%>/edit">Edit</a>
      <form class="inline" method="post" action="/<%=filename%>/delete">
        <button type="submit">Delete</button>
      </form>
    </li>
  <% end %>
</ul>
